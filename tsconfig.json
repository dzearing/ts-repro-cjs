{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "."
  }
}

